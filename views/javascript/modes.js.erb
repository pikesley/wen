<script>
  function submit(mode) {
    $.ajax({
      url: '/modes/',
      data: JSON.stringify({mode: mode}),
      type: 'POST',
      async: false,
      contentType: 'application/json',
      complete: refresh
    })
  }

  function refresh() {
    $('#modes button').each(function () {
      $(this).removeClass('btn-active').addClass('btn-default')
    })

    $('#modals button').each(function () {
      $(this).show()
      $(this).removeClass('btn-active').addClass('btn-default')
    })

    $('.mode-canceller').each(function () {
      $(this).text("<%= Wen::Config.instance.config['button-text']['modes']['dismiss'] %>")
    })

    $('.current-mode').each(function () {
      $(this).hide()
    })

    $.getJSON('/modes/', function (data) {
      $('.' + data['mode'] + '-mode').removeClass('btn-default').addClass('btn-active')
      $('#' + data['mode'] + '-is-current').show()
      $('#' + data['mode'] + '-mode-modal-picker').hide()
      $('#' + data['mode'] + '-mode-modal-cancel').text("<%= Wen::Config.instance.config['button-text']['modes']['close'] %>")
    })

    $("#modes button").focus(function () {
      this.blur()
    })
  }
</script>
