  document.getElementById('<%= "#{np[:next]}" %>').click()
})
<% else %>
//Hammer(body).on('swipeleft', function() {})
<% end %>

<% if np[:previous] %>
Hammer(body).on('swiperight', function() {
  document.getElementById('<%= "#{np[:previous]}" %>').click()
})
<% else %>
//Hammer(body).on('swiperight', function() {})
<% end %>
</script>
